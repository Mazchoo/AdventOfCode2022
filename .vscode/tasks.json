{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "C/C++: clang.exe build active file",
            "command": "clang++",
            "args": [
                "-g",
                "${file}",
                "-I",
                "${workspaceFolder}/include",
                "-I",
                "${workspaceFolder}",
                "-I",
                "${workspaceFolder}/pybind11/include",
                "-I",
                "${env:ANACONDA_PATH}/include",
                "-L",
                "${env:ANACONDA_PATH}/libs",
                "-o",
                "${fileDirname}/ExeBuild/${fileBasenameNoExtension}.exe",
                "--debug"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "type": "shell",
            "label": "C/C++: cmake build debug pybind",
            "command": "cmake",
            "args": [
                "--build",
                ".",
                "--config",
                "Debug"
            ],
            "options": {
                "cwd": "${workspaceFolder}/build"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "type": "shell",
            "label": "C/C++: cmake build release pybind",
            "command": "cmake",
            "args": [
                "--build",
                ".",
                "--config",
                "Release"
            ],
            "options": {
                "cwd": "${workspaceFolder}/build"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}